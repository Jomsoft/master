{
  "name": "loopback-billing",
  "version": "1.0.0",
  "description": "loopback billing",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build:apidocs": "lb-apidocs",
    "build": "lb-tsc es2017 --outDir dist",
    "clean": "lb-clean dist",
    "lint": "npm run prettier:check && npm run tslint",
    "lint:fix": "npm run tslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "tslint": "lb-tslint",
    "tslint:fix": "npm run tslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/test\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/test/**/*.js && npm run posttest",
    "migrate": "node ./dist/src/migrate",
    "prestart": "npm run build",
    "start": "node .",
    "prepublishOnly": "npm run test",
    "build:watch": "npm run clean && lb-tsc es2017 --outDir dist --watch",
    "start:watch-light": "nodemon -e '*' -w dist -d 2 -x 'node . '"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist/src",
    "dist/index*",
    "src"
  ],
  "dependencies": {
    "@loopback/boot": "^1.0.7",
    "@loopback/context": "^1.3.0",
    "@loopback/core": "^1.1.2",
    "@loopback/openapi-v3": "^1.1.4",
    "@loopback/repository": "^1.1.0",
    "@loopback/rest": "^1.5.0",
    "@loopback/rest-explorer": "^1.1.3",
    "@loopback/service-proxy": "^1.0.4",
    "@types/agenda": "^2.0.4",
    "@types/cron": "^1.3.0",
    "agenda": "^2.0.2",
    "agendash": "^0.4.0",
    "cron": "^1.6.0",
    "loopback-connector-mongodb": "^4.0.0"
  },
  "devDependencies": {
    "@loopback/build": "^1.0.2",
    "@loopback/testlab": "^1.0.2",
    "@types/node": "^10.11.2",
    "@types/ora": "^3.0.0",
    "nodemon": "^1.18.9",
    "ora": "^3.0.0"
  }
}
